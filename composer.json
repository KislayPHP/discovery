{
    "name": "kislayphp/discovery",
    "description": "High-performance C++ PHP extension providing service discovery and registration for PHP microservices",
    "type": "php-ext",
    "license": "Apache-2.0",
    "keywords": [
        "php",
        "microservices",
        "php-extension",
        "cpp-extension",
        "php-service-discovery",
        "php-service-registry",
        "php-consul",
        "php-etcd",
        "php-zookeeper",
        "php-health-checks",
        "php-microservices-discovery",
        "distributed-services",
        "php-service-mesh",
        "php-echo-system",
        "php-load-balancing"
    ],
    "homepage": "https://github.com/KislayPHP/discovery",
    "authors": [
        {
            "name": "KislayPHP Team",
            "email": "team@kislayphp.com"
        }
    ],
    "require": {
        "php": ">=8.2"
    },
    "scripts": {
        "lint": "php -n -l example.php",
        "validate-json": "php -n -r \"json_decode(file_get_contents('composer.json')); if (json_last_error()) { fwrite(STDERR, json_last_error_msg() . PHP_EOL); exit(1); } echo 'composer.json OK' . PHP_EOL;\""
    },
    "provide": {
        "ext-kislayphp_discovery": "*"
    },
    "suggest": {
        "kislayphp/core": "HTTP/HTTPS server foundation",
        "kislayphp/eventbus": "Service change notifications",
        "kislayphp/config": "Dynamic service configuration",
        "kislayphp/gateway": "Service-aware API gateway",
        "kislayphp/metrics": "Service health metrics",
        "kislayphp/queue": "Service-aware message queuing"
    },
    "support": {
        "issues": "https://github.com/KislayPHP/discovery/issues",
        "source": "https://github.com/KislayPHP/discovery",
        "docs": "https://github.com/KislayPHP/discovery/blob/main/README.md"
    },
    "php-ext": {
        "extension-name": "kislayphp_discovery",
        "configure-options": []
    }
}